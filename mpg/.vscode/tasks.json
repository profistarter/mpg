{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "app",
            "command": "cl.exe",
            "args": [
                "/std:c++17",
                "/I",
                "C:\\Program Files\\PostgreSQL\\12\\include",
                "/I",
                "${workspaceFolder}/../utils",
                "/I", 
                "${workspaceFolder}/../_include",
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${workspaceFolder}\\app.exe",
                "app.cpp",
                "../utils/utils.cpp",     
                "pg_connection.cpp",    
                "C:\\Program Files\\PostgreSQL\\12\\lib\\libpq.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "tests",
            "command": "cl.exe",
            "args": [
                "/std:c++17",
                "/I",
                "C:\\Program Files\\PostgreSQL\\12\\include",
                "/I",
                "${workspaceFolder}/../utils",
                "/I", 
                "${workspaceFolder}/../_include",
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${workspaceFolder}\\test.exe",
                "test.cpp",
                "../utils/utils.cpp",     
                "pg_connection.cpp",    
                "C:\\Program Files\\PostgreSQL\\12\\lib\\libpq.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "app linux",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++1z",
                "-g",
                "app.cpp",  
                "../utils/utils.cpp",           
                "pg_connection.cpp",
                "-o",
                "${workspaceFolder}/app",
                "-I", "/usr/include/postgresql",
                "-I", "${workspaceFolder}/../utils",
                "-I", "${workspaceFolder}/../_include",
                "-L", "/usr/lib/x86_64-linux-gnu",
                "-lpq", "-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "tests linux",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++1z",
                "-g",
                "test.cpp",  
                "../utils/utils.cpp",           
                "pg_connection.cpp",
                "-o",
                "${workspaceFolder}/test",
                "-I", "/usr/include/postgresql",
                "-I", "${workspaceFolder}/../utils",
                "-I", "${workspaceFolder}/../_include",
                "-L", "/usr/lib/x86_64-linux-gnu",
                "-lpq", "-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}